<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:hint">Enter your account number</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:drawableLeft">@drawable/ic_facebook</item>
    </style>

    <style name="button">
        <item name="android:backgroundTint">#229B23</item>
        <item name="android:hint">press</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:color">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>

    </style>

    <style name="button_red">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#FF0000</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:color">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="button_purple">
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:hint">press</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:color">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">1dp</item>
    </style>


    <style name="custom_shape">
        <item name="cornerSize">50%</item>
    </style>

    <style name="custom_border">
        <item name="cornerSizeTopRight">45%</item>
        <item name="cornerSizeBottomRight">45%</item>
        <item name="cornerSizeTopLeft">80dp</item>
        <item name="cornerSizeBottomLeft">80dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
    </style>

    <style name="custom_circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">15%</item>
    </style>

    <style name="menu_theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:popupBackground">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>